{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",

        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType": "dock",
                "VerticalAlignment": "Center",
                "Background": "{BackgroundDefault}",
                "Padding": "42, 16, 42, 16",
                "MarginBottom": 10,
                "Items": [
                    //league name
                    {
                        "BlockType": "stack",
                        "VerticalAlignment": "Center",
                        "HorizontalAlignment": "Left",
                        "Orientation": "Vertical",
                        "Items": [
                            {
                                "BlockType": "text",
                                "Source": "{Season.LeagueInfo.LeagueName}",
                                "FontName": "{FontNameBold}",
                                "FontSize": 40
                            },
                            {
                                "BlockType": "text",
                                "Source": "{Season.Name}",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameWide}",
                                "FontSize": 30,
                                "Foreground": "{ForegroundDefault}"
                            }
                        ]
                    },

                    {
                        "Name": "leagueLogo",
                        "MarginLeft": 36,
                        "MarginRight": 0,
                        "Height": 56,
                        "BlockType": "image",
                        "HorizontalAlignment": "Right",
                        "VerticalAlignment": "Center",
                        "Source": "{Season.LeagueInfo.LeagueLogo}"
                    }
                ]
            },            

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",                
                "TableOptions": {
                    "ItemsSource": "{Events.Events}",
                    "ColSpacing": 0,
                    "RowSpacing": 5,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "Columns": [
                        //number
                        {
                            "Template": {
                                "BlockType": "text",
                                "PaddingLeft": 48,
                                "Source": "{Item.Position}",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameBold}",
                                "Foreground": "{ForegroundDefault}",
                                "FontSize": 60,
                                "PaddingRight": 10,
                                "Background": "{BackgroundDefault}",
                                "TextOptions": {
                                    "HorizontalAlignment": "Center"
                                }
                            }
                        },

                        {
                            "Template": {
                                "BlockType": "stack",
                                "PaddingLeft": 32,
                                "PaddingRight": 4,
                                "HorizontalAlignment": "Left",
                                "Background": "{BackgroundDefault}",
                                "Items": [
                                    //flag
                                    {
                                        "BlockType": "image",
                                        "Height": 110,
                                        "MarginRight": 20,
                                        "VerticalAlignment": "Center",
                                        "ImageOptions": {
                                            "Path": "{Item.Track.Nation.LogoPath}",
                                            "VerticalAlignment": "Center"
                                        }
                                    }
                                ]
                            }
                        },

                        //Country
                        {
                            "WidthStretch": true,
                            "Template": {
                                "BlockType": "text",
                                "PaddingLeft": 24,
                                "PaddingRight": 5,
                                "Source": "[{Item.Track.CountryName}]",
                                "HorizontalAlignment": "Left",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameBold}",
                                "Foreground": "{ForegroundDefault}",
                                "FontSize": 50,
                                "Background": "{BackgroundDefault}"
                            }
                        },

                        //location
                        {
                            "WidthStretch": true,
                            "Template": {
                                "BlockType": "text",
                                "Source": "[{Item.Track.LocationName}]",
                                "HorizontalAlignment": "Left",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameDefault}",
                                "Foreground": "{ForegroundDefault}",
                                "FontSize": 40,
                                "PaddingRight": 56,
                                "PaddingLeft": 10,
                                "Background": "{BackgroundDefault}"
                            }
                        },

                        //date

                            {
                            "Width": 300,
                            "Template": {
                                "BlockType": "stack",
                                "Orientation": "Vertical",
                                "Width": 300,
                                "Height": 110,
                                "Background": "{ForegroundAlt}",
                                "VerticalAlignment": "Center",
                                "Items": [
                                    {
                                    "BlockType": "text",
                                    "FontName": "{FontNameWide}",
                                    "Background": "{ForegroundAlt}",
                                    "PaddingTop": 25,
                                    "Source": "{Item.Date, Converter=DateToDayOfMonth}. {Item.Date, Converter=DateToMonthInWords}",
                                    "FontSize": 30,
                                    "Foreground": "{ForegroundDefault}",
                                    "HorizontalAlignment": "Center"
                                    },
                                    {
                                        "BlockType": "text",
                                        "FontName": "{FontNameWide}",
                                        "Background": "{ForegroundAlt}",
                                        "PaddingBottom": 15,
                                        "Source": "{Item.Date, Converter=DateToTime}",
                                        "FontSize": 30,
                                        "Foreground": "{ForegroundDefault}",
                                        "HorizontalAlignment": "Center"
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    }
}
